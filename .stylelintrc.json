{
	"extends": [
		"stylelint-config-standard"
	],	
  "plugins": [
		"stylelint-order",
		"stylelint-scss"
	],
	"rules": {
		"order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-alphabetical-order": true,
		"at-rule-no-unknown": null,
		"scss/at-rule-no-unknown": true,
		"indentation": 2,
		"number-leading-zero": null,
		"function-url-quotes": "always"
	}
}